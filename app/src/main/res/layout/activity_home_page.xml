<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victo.salarymanagement.HomePage"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textSize="20dp"
        android:id="@+id/tvLabelLogIn"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUserName"
        android:textSize="15dp"
        android:text="Username:"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/eTuserName" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="username"
        android:textSize="15dp"
        android:id="@+id/eTuserName"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvUserName"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelLogIn"
        app:layout_constraintHorizontal_bias="0.33" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPassword"
        android:textSize="15dp"
        android:text="Password:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/eTpassword"
        android:layout_marginStart="8dp" />

    <EditText
        android:hint="password"
        android:textSize="15dp"
        android:id="@+id/eTpassword"
        android:inputType="textPassword"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvPassword"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eTuserName"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginTop="8dp" />






    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogIn"
        android:text="Log in"
        android:textSize="15dp"
        android:onClick="logIn"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eTpassword"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_height="wrap_content"
        android:text="Register User"
        android:textSize="20dp"
        android:id="@+id/tvLabelRegisterUser"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnLogIn"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        android:textSize="15dp"
        android:text="Name: "
        app:layout_constraintBaseline_toBaselineOf="@+id/eTName"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:layout_height="wrap_content"
        android:hint="name"
        android:textSize="15dp"
        android:id="@+id/eTName"
        app:layout_constraintTop_toBottomOf="@+id/tvLabelRegisterUser"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvName"
        android:layout_marginEnd="24dp"
        android:layout_width="0dp"
        android:layout_marginTop="8dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRegisterEmail"
        android:textSize="15dp"
        android:text="Email: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/eTregisterEmail"
        android:layout_marginStart="8dp" />

    <EditText
        android:layout_height="wrap_content"
        android:hint="email"
        android:textSize="15dp"
        android:id="@+id/eTregisterEmail"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eTName"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvRegisterEmail"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_bias="0.4"
        android:layout_marginTop="8dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRegisterPassword"
        android:textSize="15dp"
        android:text="Password: "
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/eTRegisterPassword" />

    <EditText
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="textPassword"
        android:textSize="15dp"
        android:id="@+id/eTRegisterPassword"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/eTregisterEmail"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvRegisterPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRegisterBusinessRole"
        android:textSize="15dp"
        android:text="Business Role: "
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/chbEmployee"
        app:layout_constraintHorizontal_bias="0.06" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chbManager"
        android:text="Manager"
        app:layout_constraintBaseline_toBaselineOf="@+id/chbEmployee"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/chbEmployee" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chbEmployee"
        android:text="Employee"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/eTRegisterPassword"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvRegisterBusinessRole"
        app:layout_constraintHorizontal_bias="0.33" />





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegisterUser"
        android:text="Register user"
        android:onClick="registerUser"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnLogOut" />

    <Button
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogOut"
        android:text="Logout"
        android:onClick="logOut"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/chbEmployee"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/btnRegisterUser"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
