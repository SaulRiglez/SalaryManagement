<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_for_managers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.victo.salarymanagement.Activities.MenuForManagers">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Employee Management"
        android:onClick="goEmployeeManagement"
        android:id="@+id/btnEmployeeManagement"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report Management"
        android:onClick="goReportManagement"
        android:id="@+id/btnReportManagement"/>

</LinearLayout>
